    Purpose: 
      This describes all interface objects for the OpenSatKit(OSK) C Demo
      (osk_c_demo) application 

    Notes:
      1. This document adheres to the Electronic Data Sheet (EDS) XML schema 
         as prescribed in CCSDS book 876.0. 
      
-->
<PackageFile xmlns="http://www.ccsds.org/schema/sois/seds">
  <Package name="OSK_C_DEMO" shortDescription="OpenSatKit Demo application">
    <DataTypeSet>

      <!--***********************************-->
      <!--**** DataTypeSet:  Entry Types ****-->
      <!--***********************************-->

      <StringDataType name="LogEntryText" length="${OSK_C_DEMO/LOG_ENTRY_TEXT_LEN}" />

      <EnumeratedDataType name="TblId" shortDescription="Identifies different app tables" >
        <IntegerDataEncoding sizeInBits="8" encoding="unsigned" />
        <EnumerationList>
          <Enumeration label="HISTOGRAM_BIN" value="0" shortDescription="Histogram bin definitions" />
        </EnumerationList>
      </EnumeratedDataType>

      <!--***************************************-->
      <!--**** DataTypeSet: Command Payloads ****-->
      <!--***************************************-->

      <ContainerDataType name="LoadTbl_Payload" shortDescription="Load an app's JSON table">
        <EntryList>
          <Entry name="Id"       type="TblId"                   shortDescription="Table identifier" />
          <Entry name="Type"     type="OSK_C_FW/TblLoadOptions" shortDescription="Replace entire table or perform sparse entry updates" />
          <Entry name="Filename" type="BASE_TYPES/PathName"     shortDescription="Full path and file name of table to be loaded" />
       </EntryList>
      </ContainerDataType>
      
      <ContainerDataType name="DumpTbl_Payload" shortDescription="Dump an app's JSON table">
        <EntryList>
          <Entry name="Id"       type="TblId"               shortDescription="Table identifier" />
          <Entry name="Unused"   type="BASE_TYPES/uint8"    shortDescription="Unused" />
          <Entry name="Filename" type="BASE_TYPES/PathName" shortDescription="Full path and file name of table to be dumped" />
       </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StartHistogramLog_Payload" shortDescription="Start logging data samples for a specific bin to a text log file">
        <EntryList>
          <Entry name="BinNum"     type="BASE_TYPES/uint16" shortDescription="Bin number to be logged. Bins are defined by the histogram bin table" />
          <Entry name="MaxEntries" type="BASE_TYPES/uint16" shortDescription="Maximum number of data samples to store in the log file" />
       </EntryList>
      </ContainerDataType>

      <ContainerDataType name="RunHistogramLogChildTask_Payload" shortDescription="Internal app command to run the histogram log child task">
        <EntryList>
          <Entry name="BinNum"     type="BASE_TYPES/uint16" shortDescription="Data sample to be logged" />
          <Entry name="DataSample" type="BASE_TYPES/uint16" shortDescription="Data sample to be logged" />
       </EntryList>
      </ContainerDataType>

      <!--*****************************************-->
      <!--**** DataTypeSet: Telemetry Payloads ****-->
      <!--*****************************************-->
    
      <ContainerDataType name="StatusTlm_Payload" shortDescription="App's state and status summary">
        <EntryList>
          <Entry name="ValidCmdCnt"         type="BASE_TYPES/uint16" />
          <Entry name="InvalidCmdCnt"       type="BASE_TYPES/uint16" />
          <Entry name="ChildValidCmdCnt"    type="BASE_TYPES/uint16" />
          <Entry name="ChildInvalidCmdCnt"  type="BASE_TYPES/uint16" />
          <Entry name="LastTblAction"       type="OSK_C_FW/TblActions" />
          <Entry name="LastTblActionStatus" type="OSK_C_FW/TblActionStatus" />
          <Entry name="DeviceData"          type="BASE_TYPES/uint16" />
          <Entry name="DeviceDataModulo"    type="BASE_TYPES/uint16" />
          <Entry name="HistEna"             type="OSK_C_FW/BooleanUint16" />
          <Entry name="HistMaxValue"        type="BASE_TYPES/uint16" />
          <Entry name="HistSampleCnt"       type="BASE_TYPES/uint32" />
          <Entry name="HistBinCntStr"       type="BASE_TYPES/PathName"      shortDescription="CSV text string for each bin count" />
          <Entry name="HistLogEna"          type="OSK_C_FW/BooleanUint16" />
          <Entry name="HistLogBinNum"       type="BASE_TYPES/uint16" />
          <Entry name="HistLogCnt"          type="BASE_TYPES/uint16" />
          <Entry name="HistLogMaxEntries"   type="BASE_TYPES/uint16" />
          <Entry name="HistLogPlaybkEna"    type="OSK_C_FW/BooleanUint16" />
          <Entry name="HistLogPlaybkCnt"    type="BASE_TYPES/uint16" />
          <Entry name="HistLogFilename"     type="BASE_TYPES/PathName" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="BinPlaybkTlm_Payload" shortDescription="">
        <EntryList>
          <Entry name="LogFileEntry"  type="BASE_TYPES/uint16" shortDescription="Log file line number of the text in this message" />
          <Entry name="DataSampleTxt" type="LogEntryText"      shortDescription="Timestamped data sample"/>
       </EntryList>
      </ContainerDataType>

      <!--**************************************-->
      <!--**** DataTypeSet: Command Packets ****-->
      <!--**************************************-->

      <ContainerDataType name="CommandBase" baseType="CFE_HDR/CommandHeader">
      </ContainerDataType>

      <ContainerDataType name="Noop" baseType="CommandBase" shortDescription="Generate an info event message with app version">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/NOOP_CC}" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="Reset" baseType="CommandBase" shortDescription="Reset app to a known state">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/RESET_CC}" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="LoadTbl" baseType="CommandBase">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/LOAD_TBL_CC}" />
        </ConstraintSet>
        <EntryList>
          <Entry type="LoadTbl_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="DumpTbl" baseType="CommandBase">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/DUMP_TBL_CC}" />
        </ConstraintSet>
        <EntryList>
          <Entry type="DumpTbl_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StartHistogram" baseType="CommandBase" shortDescription="Start populating the histogram">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 0" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StopHistogram" baseType="CommandBase" shortDescription="Stop populating the histogram">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 1" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StartHistogramLog" baseType="CommandBase" shortDescription="Start logging data samples for a specific histogram bin">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 2" />
        </ConstraintSet>
        <EntryList>
          <Entry type="StartHistogramLog_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <ContainerDataType name="StopHistogramLog" baseType="CommandBase" shortDescription="Stop logging data samples">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 3" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StartHistogramLogPlaybk" baseType="CommandBase" shortDescription="Start sending telemetry packets for each log entry">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 4" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="StopHistogramLogPlaybk" baseType="CommandBase" shortDescription="Stop a play back that is in progress">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 5" />
        </ConstraintSet>
      </ContainerDataType>

      <ContainerDataType name="RunHistogramLogChildTask" baseType="CommandBase" shortDescription="Internal app command to execute app's child task">
        <ConstraintSet>
          <ValueConstraint entry="Sec.FunctionCode" value="${OSK_C_FW/APP_BASE_CC} + 6" />
        </ConstraintSet>
        <EntryList>
          <Entry type="RunHistogramLogChildTask_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

      <!--****************************************-->
      <!--**** DataTypeSet: Telemetry Packets ****-->
      <!--****************************************-->

      <ContainerDataType name="StatusTlm" baseType="CFE_HDR/TelemetryHeader">
        <EntryList>
          <Entry type="StatusTlm_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>
     
      <ContainerDataType name="BinPlaybkTlm" baseType="CFE_HDR/TelemetryHeader">
        <EntryList>
          <Entry type="BinPlaybkTlm_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>

    </DataTypeSet>
    
    <ComponentSet>
      <Component name="Application">

        <!--***********************************-->
        <!--**** Component Set: Interfaces ****-->
        <!--***********************************-->
      
        <RequiredInterfaceSet>
        
          <Interface name="CMD" shortDescription="Software bus telecommand interface" type="CFE_SB/Telecommand">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelecommandDataType" type="CommandBase" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="EXE_APP" shortDescription="Signal app to execute command interface" type="CFE_SB/Telecommand">
             <!-- This uses a bare spacepacket with no payload -->
             <GenericTypeMapSet>
                <GenericTypeMap name="TelecommandDataType" type="CFE_HDR/CommandHeader" />
             </GenericTypeMapSet>
          </Interface>
          
          <Interface name="STATUS_TLM" shortDescription="Software bus status telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="StatusTlm" />
            </GenericTypeMapSet>
          </Interface>
          <Interface name="BIN_PLAYBK_TLM" shortDescription="Histogram bin playback telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="BinPlaybkTlm" />
            </GenericTypeMapSet>
          </Interface>
        </RequiredInterfaceSet>

        <!--***************************************-->
        <!--**** Component Set: Implementation ****-->
        <!--***************************************-->

        <Implementation>
          <VariableSet>
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="CmdTopicId"          initialValue="${CFE_MISSION/OSK_C_DEMO_CMD_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="ExeAppTopicId"       initialValue="${CFE_MISSION/OSK_C_DEMO_EXE_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="StatusTlmTopicId"    initialValue="${CFE_MISSION/OSK_C_DEMO_STATUS_TLM_TOPICID}" />
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="BinPlaybkTlmTopicId" initialValue="${CFE_MISSION/OSK_C_DEMO_BIN_PLAYBK_TLM_TOPICID}" />
          </VariableSet>
          <!-- Assign fixed numbers to the "TopicId" parameter of each interface -->
          <ParameterMapSet>          
            <ParameterMap interface="CMD"             parameter="TopicId" variableRef="CmdTopicId" />
            <ParameterMap interface="EXE_APP"         parameter="TopicId" variableRef="ExeAppTopicId" />
            <ParameterMap interface="STATUS_TLM"      parameter="TopicId" variableRef="StatusTlmTopicId" />
            <ParameterMap interface="BIN_PLAYBK_TLM"  parameter="TopicId" variableRef="BinPlaybkTlmTopicId" />
          </ParameterMapSet>
        </Implementation>
      </Component>
    </ComponentSet>
    
  </Package>
</PackageFile>
